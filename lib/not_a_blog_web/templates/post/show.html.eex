<div class="d-flex justify-content-between">
  <h1 class="my-4"><%= @post.title %></h1>
  <div>
    <%= button "Edit", to: post_path(@conn, :edit, @post.id), method: :get, class: "mt-4" %>
    <%= button "Delete", to: post_path(@conn, :delete, @post.id), method: :delete, class: "mt-4" %>
  </div>
</div>

<hr>
<div class="text-muted d-flex justify-content-between">
  <div>
    Posted <%= publication_time(@post) %>
  </div>
  <div class="post-views">
    Views: <%= @post.views %>
  </div>
</div>
<hr>
<div><%= @post.content %></div>

<%= button "Back", to: post_path(@conn, :index), method: :get, class: "mb-5 mt-5" %>
